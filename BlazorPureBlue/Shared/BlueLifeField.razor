
@if (IsActive == true)
{
    <input class="form-check" type="checkbox" value=@rec.TaskState onclick="Clicktest"/>
}
else
{
    <input class="form-check" type="checkbox" value=@rec.TaskState onclick="Clicktest" disabled />
}

@code {
    [Parameter]
    public Blue.DayTaskRecord rec { get; set; } = new Blue.DayTaskRecord();
    
    public bool IsActive { get; set; }



}
